    pdfauthor=Lucilla
}

\quotingsetup{
    font={itshape, centering},
    leftmargin=1cm,
    rightmargin=1cm
}

\newcommand{\mychapter}[1]{%
    \setcounter{footnote}{0}%
    \addtocounter{chapter}{1}%
    \section*{#1}%
    \vspace{-2em}%
    \pdfbookmark[1]{#1}{#1}%
    \vspace{2em}%
}

\newcommand{\myfootnote}[1][]{%
    \addtocounter{footnote}{1}%
    [{%
        \bf \ifthenelse{\equal{#1}{}}{\arabic{chapter}}{#1}.\alph{footnote}%
    }]%
}

\newcommand{\mytranscript}[1]{[{\bf #1}]}

\newcommand{\myurl}[1]{{\small \url{#1}}}

\newcommand{\recursivefootnote}[1][]{%
    \ifthenelse{\equal{#1}{}}{\arabic{chapter}}{#1}.\alph{footnote}%
}