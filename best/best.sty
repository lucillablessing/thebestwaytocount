\newcommand{\mychapter}[2][]{%
    \setcounter{footnote}{0}%
    \addtocounter{chapter}{1}%
    \ifthenelse{\equal{#1}{}}{%
        \chapter*{#2}%
        \vspace{-9em}%
        \pdfbookmark[1]{#2}{#2}%
    }{%
        \chapter*{chapter #1 \smallskip \\ \Large #2}%
        \vspace{-9em}%
        \pdfbookmark[1]{chapter #1}{#1}%
    }%
    \vspace{6em}%
}

\newcommand{\myfootnote}[1][]{%
    \addtocounter{footnote}{1}%
